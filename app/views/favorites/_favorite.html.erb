<% if book.favorited_by?(current_user) %>
  <%= link_to  book_favorites_path(book), method: :delete, class: "btn text-danger" do %>
    <i class="fas fa-heart"></i>
    <%= favorites_count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, class: "btn text-primary" do %>
    <i class="fas fa-heart"></i>
    <%= favorites_count %>
  <% end %>
<% end %>
